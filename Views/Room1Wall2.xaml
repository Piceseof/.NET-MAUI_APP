<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Games.Views.Room1Wall2"
              BackgroundColor="Black">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

         <Image
            x:Name="RoomOneWallImage"
            Source="roomonewall.png"
            Aspect="AspectFill"
            HorizontalOptions="Fill"
            VerticalOptions="FillAndExpand"
            Grid.Column="0" >
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBackClicked"/>
            </Image.GestureRecognizers>
        </Image>

        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 模拟之前位于中心的cabinet.png图片 -->
            
            <Image
                Source="safe_deposit_box.png"
                Aspect="AspectFill"
                HorizontalOptions="Start"
                VerticalOptions="End"
                WidthRequest="250"
                HeightRequest="250"
                Grid.Row="6"
                Grid.Column="0"
                Margin="50,0,0,0" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSafeDepositBoxClicked"/>
                </Image.GestureRecognizers>
            </Image>
            <Image
                Source="shelf.png"
                Aspect="AspectFill"
                HorizontalOptions="Start"
                VerticalOptions="End"
                WidthRequest="250"
                HeightRequest="150"
                Grid.Row="6"
                Grid.Column="0"
                Margin="100,0,0,200">
                <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="ShelfTapped" />
            </Image.GestureRecognizers>
            </Image>
            <Image
                    x:Name="ShelfPictureFragment"
                    Source="shelf_picture_fragment.png"
                    Aspect="AspectFill"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    WidthRequest="10"
                    HeightRequest="10"
                    Grid.Row="6"
                    Grid.Column="0"
                    Margin="151,0,10,74">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnShelfPictureFragmentClicked"/>
                </Image.GestureRecognizers>
            </Image>
            <Image
                Source="shelf_book.png"
                Aspect="AspectFill"
                HorizontalOptions="Start"
                VerticalOptions="End"
                WidthRequest="20"
                HeightRequest="40"
                Grid.Row="6"
                Grid.Column="0"
                Margin="117,0,0,257">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Shelfclick"/>
                </Image.GestureRecognizers>
            </Image>
            <Image
                Source="light_switch.png"
                Aspect="AspectFill"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="60"
                HeightRequest="60"
                Grid.Row="6"
                Grid.Column="0"
                Margin="140,0,0,-50">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLightSwitchClicked"/>
                </Image.GestureRecognizers>
            </Image>
            <Image
                Source="bookcase.png"
                Aspect="AspectFill"
                HorizontalOptions="End"
                VerticalOptions="Center"
                WidthRequest="160"
                HeightRequest="220"
                Grid.Row="6"
                Grid.Column="0"
                Margin="100,200,50,30" />
            
            <Image
                Source="baggage.png"
                Aspect="AspectFill"
                HorizontalOptions="Center" 
                VerticalOptions="End" 
                WidthRequest="100"
                HeightRequest="100"
                Grid.Row="6"
                Grid.Column="0"
                Margin="30,0,0,20" />
            <Image
                Source="alarm.png"
                Aspect="AspectFill"
                HorizontalOptions="End"  
                VerticalOptions="End" 
                WidthRequest="30"
                HeightRequest="45"
                Grid.Row="6"
                Grid.Column="0"
                Margin="0,0,120,60" />
            <Image
                Source="candle.jpg"
                Aspect="AspectFill"
                HorizontalOptions="End"  
                VerticalOptions="Center"
                WidthRequest="30"
                HeightRequest="45"
                Grid.Row="6"
                Grid.Column="0"
                Margin="0,0,100,-35" />
            <Image
                Source="scale.png"
                Aspect="AspectFill"
                HorizontalOptions="End"
                VerticalOptions="Center"
                WidthRequest="50"
                HeightRequest="50"
                Grid.Row="6"
                Grid.Column="0"
                Margin="100,180,100,30">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnScaleClicked"/>
                </Image.GestureRecognizers>
            </Image>
            <Image
                x:Name="newarrow"
                    Source="newarrow.png"
                    Aspect="AspectFill"
                     HorizontalOptions="Center" 
             VerticalOptions="Center"  
             Margin="-560,270,5,0"
             WidthRequest="50"
             HeightRequest="50"
             IsVisible="False"   
             Grid.Row="0">
            </Image>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image
                x:Name="SettingImage"
                Source="setting.png"
                Aspect="AspectFill"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="4"
                WidthRequest="30"
                HeightRequest="30"
                Grid.Row="0">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSettingClicked"/>
                </Image.GestureRecognizers>
            </Image>

            <!-- 物品栏 -->
            <StackLayout
                x:Name="InventoryLayout"
                Orientation="Vertical"
                HorizontalOptions="End"
                VerticalOptions="End"
                Spacing="15"
                Margin="20,40,20,20">
                <Image
                    Source="inventory.png"
                    Aspect="AspectFill"
                    WidthRequest="50"
                    HeightRequest="50" />
                <Image
                    Source="inventory.png"
                    Aspect="AspectFill"
                    WidthRequest="50"
                    HeightRequest="50" />
                <Image
                    Source="inventory.png"
                    Aspect="AspectFill"
                    WidthRequest="50"
                    HeightRequest="50" />
                <Image
                    Source="inventory.png"
                    Aspect="AspectFill"
                    WidthRequest="50"
                    HeightRequest="50" />
                <Image
                    Source="inventory.png"
                    Aspect="AspectFill"
                    WidthRequest="50"
                    HeightRequest="50" />
            </StackLayout>
        </Grid>

        <!-- 提示文本 Label -->
        <Label 
            x:Name="FragmentHintLabel"
            Text=""
            TextColor="White"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            Margin="0,30,0,0"
            Padding="25,15,25,15"
            LineBreakMode="WordWrap"
            MaxLines="3"
            WidthRequest="600"
            MaximumWidthRequest="700"
            IsVisible="False"
            Grid.Column="0"
            ZIndex="9999">
            <Label.Background>
                <SolidColorBrush Color="#BF000000"/>
            </Label.Background>
            <Label.Shadow>
                <Shadow 
                    Brush="Black"
                    Offset="3,3"
                    Radius="5"
                    Opacity="0.7"/>
            </Label.Shadow>
        </Label>

        <!-- 切换按钮 -->
        <Label 
            x:Name="LeftButton"
            Text="◀"
            FontSize="24"
            FontAttributes="Bold"
            TextColor="Black"
            WidthRequest="30"
            HeightRequest="30"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            Margin="20,0"
            Opacity="0.8">
            <Label.Shadow>
                <Shadow Brush="White"
                        Offset="0,0"
                        Radius="3"
                        Opacity="1"/>
            </Label.Shadow>
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnLeftButtonClicked"/>
            </Label.GestureRecognizers>
        </Label>

        <Label 
            x:Name="RightButton"
            Text="▶"
            FontSize="24"
            FontAttributes="Bold"
            TextColor="Black"
            WidthRequest="30"
            HeightRequest="30"
            HorizontalOptions="End"
            VerticalOptions="Center"
            Margin="20,0"
            Opacity="0.8">
            <Label.Shadow>
                <Shadow Brush="White"
                        Offset="0,0"
                        Radius="3"
                        Opacity="1"/>
            </Label.Shadow>
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnRightButtonClicked"/>
            </Label.GestureRecognizers>
        </Label>
        <Image
            x:Name="EyeImage"
            Source="tip.png"
            Aspect="AspectFill"
            HorizontalOptions="End" 
            VerticalOptions="Start" 
            Margin="150,0,0,0"
            WidthRequest="30"
            HeightRequest="30"
            Grid.Row="0">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnEyeImageTapped"/>
            </Image.GestureRecognizers>
        </Image>
        <Grid x:Name="DarkOverlay" 
      IsVisible="False" 
      Grid.ColumnSpan="2" 
      BackgroundColor="#80000000" 
      ZIndex="100">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayTapped"/>
            </Grid.GestureRecognizers>
        </Grid>
    </Grid>
</ContentPage>
