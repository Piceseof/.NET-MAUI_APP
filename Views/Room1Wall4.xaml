<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Games.Views.Room1Wall4"
             BackgroundColor="Black">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Image
            x:Name="RoomOneWallImage"
            Source="roomonewall.png"
            Aspect="AspectFill"
            HorizontalOptions="Fill"
            VerticalOptions="FillAndExpand"
            Grid.Column="0" />

        <Label 
            x:Name="LeftButton"
            Text="◀"
            FontSize="24"
            FontAttributes="Bold"
            TextColor="Black"
            WidthRequest="30"
            HeightRequest="30"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            Margin="20,0"
            Opacity="0.8">
            <Label.Shadow>
                <Shadow Brush="White"
                        Offset="0,0"
                        Radius="3"
                        Opacity="1"/>
            </Label.Shadow>
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnLeftButtonClicked"/>
            </Label.GestureRecognizers>
        </Label>

        <Label 
            x:Name="RightButton"
            Text="▶"
            FontSize="24"
            FontAttributes="Bold"
            TextColor="Black"
            WidthRequest="30"
            HeightRequest="30"
            HorizontalOptions="End"
            VerticalOptions="Center"
            Margin="20,0"
            Opacity="0.8">
            <Label.Shadow>
                <Shadow Brush="White"
                        Offset="0,0"
                        Radius="3"
                        Opacity="1"/>
            </Label.Shadow>
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnRightButtonClicked"/>
            </Label.GestureRecognizers>
        </Label>

        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 修改画碎片图片，添加点击事件 -->
            <Image
                x:Name="ClothPictureFragment"
                Source="cloth_picture_fragment.png"
                Aspect="AspectFill"
                HorizontalOptions="End"
                VerticalOptions="End"
                WidthRequest="15"
                HeightRequest="15"
                Grid.Row="6"
                Grid.Column="0"
                Margin="75,55,95,238">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnClothPictureFragmentClicked"/>
                </Image.GestureRecognizers>
            </Image>
            <Image
                Source="hanger.png"
                Aspect="AspectFill"
                HorizontalOptions="End"
                VerticalOptions="End"
                WidthRequest="50"
                HeightRequest="250"
                Grid.Row="6"
                Grid.Column="0"
                Margin="0,0,100,20" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="hangerTapped" />
                </Image.GestureRecognizers>
            </Image>
            <Image
    Source="hat.png"
    Aspect="AspectFill"
    HorizontalOptions="End"  
    VerticalOptions="Center"
    WidthRequest="80"
    HeightRequest="70"
    Grid.Row="6"
    Grid.Column="0"
    Margin="0,0,100,190" />
            <Image
                Source="cloth.png"
                Aspect="AspectFill"
                HorizontalOptions="Center" 
                VerticalOptions="End" 
                WidthRequest="50"
                HeightRequest="100"
                Grid.Row="6"
                Grid.Column="0"
                Margin="540,0,0,130" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnClothClicked" />
                </Image.GestureRecognizers>
            </Image>

            <Image
                Source="wall4_desk.png"
                Aspect="AspectFill"
                HorizontalOptions="Start"
                VerticalOptions="End"
                WidthRequest="150"
                HeightRequest="150"
                Grid.Row="6"
                Grid.Column="0"
                Margin="90,0,0,15" />
            <Image
                Source="vase.jpg"
                Aspect="AspectFill"
                HorizontalOptions="Center"   
                VerticalOptions="Center"   
                WidthRequest="60"
                HeightRequest="60"
                Grid.Row="6"
                Grid.Column="0"
                Margin="-350,-60,0,0" />
            <Image
    Source="drawing.jpeg"
    Aspect="AspectFill"
    HorizontalOptions="Center"   
    VerticalOptions="Center"   
    WidthRequest="170"
    HeightRequest="110"
    Grid.Row="6"
    Grid.Column="0"
    Margin="-300,-340,0,0" />
            <Image
                Source="laptop.png"
                Aspect="AspectFill"
                HorizontalOptions="Start"
                VerticalOptions="End"
                WidthRequest="70"
                HeightRequest="50"
                Grid.Row="6"
                Grid.Column="0"
                Margin="99,0,0,158" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLaptopClicked"/>
                </Image.GestureRecognizers>
            </Image>
            <Image
                Source="door.png"
                Aspect="AspectFill"
                HorizontalOptions="Center"
                VerticalOptions="End"
                WidthRequest="130"
                HeightRequest="250"
                Grid.Row="6"
                Grid.Column="0"
                Margin="99,0,0,45" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="doorTapped" />
                </Image.GestureRecognizers>
            </Image>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image
                x:Name="SettingImage"
                Source="setting.png"
                Aspect="AspectFill"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="4"
                WidthRequest="30"
                HeightRequest="30"
                Grid.Row="0">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSettingClicked"/>
                </Image.GestureRecognizers>
            </Image>

            <!-- 添加物品栏的名称引用 -->
            <StackLayout
                x:Name="InventoryLayout"
                Orientation="Vertical"
                HorizontalOptions="End"
                VerticalOptions="End"
                Spacing="15"
                Margin="20,40,20,20">
                <Image
                    Source="inventory.png"
                    Aspect="AspectFill"
                    WidthRequest="50"
                    HeightRequest="50" />
                <Image
                    Source="inventory.png"
                    Aspect="AspectFill"
                    WidthRequest="50"
                    HeightRequest="50" />
                <Image
                    Source="inventory.png"
                    Aspect="AspectFill"
                    WidthRequest="50"
                    HeightRequest="50" />
                <Image
                    Source="inventory.png"
                    Aspect="AspectFill"
                    WidthRequest="50"
                    HeightRequest="50" />
                <Image
                    Source="inventory.png"
                    Aspect="AspectFill"
                    WidthRequest="50"
                    HeightRequest="50" />
            </StackLayout>
        </Grid>

        <!-- 提示文本 Label -->
        <Label 
            x:Name="FragmentHintLabel"
            Text=""
            TextColor="White"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            Margin="0,30,0,0"
            Padding="25,15,25,15"
            LineBreakMode="WordWrap"
            MaxLines="3"
            WidthRequest="600"
            MaximumWidthRequest="700"
            IsVisible="False"
            Grid.Column="0"
            ZIndex="9999">
            <Label.Background>
                <SolidColorBrush Color="#BF000000"/>
            </Label.Background>
            <Label.Shadow>
                <Shadow 
                    Brush="Black"
                    Offset="3,3"
                    Radius="5"
                    Opacity="0.7"/>
            </Label.Shadow>
        </Label>
    </Grid>
</ContentPage>